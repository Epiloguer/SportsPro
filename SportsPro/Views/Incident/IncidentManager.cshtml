@model List<Incident>
@{
    ViewBag.Title = "Incident Manager";
}

<h2>Incident List</h2>

<a asp-controller="Incident" asp-action="Add" class="btn btn-primary">Add New Incident</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Customer</th>
            <th>Product</th>
            <th>Date Opened</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var incident in Model)
        {
            <tr>
                <td>@incident.Title</td>
                <td>@incident.Customer.FullName</td>
                <td>@incident.Product.Name</td>
                <td>@incident.DateOpened</td>
                <td>
                    <a asp-controller="Incident" asp-action="Edit"
                       asp-route-id="@incident.IncidentID" class="btn btn-outline-secondary">Edit</a>
                    <a asp-controller="Incident" asp-action="Delete"
                       asp-route-id="@incident.IncidentID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
