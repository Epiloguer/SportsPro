@model List<Product>
@{
    ViewBag.Title = "Product Manager";
}

<h2>Product List</h2>

<a asp-controller="Product" asp-action="Add" class="btn btn-primary">Add New Product</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Product Code</th>
            <th>Name</th>
            <th>Yearly Price</th>
            <th>Release Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductCode</td>
                    <td>@item.Name</td>
                    <td>@item.YearlyPrice.ToString("C2")</td>
                    <td>@item.ReleaseDate.ToShortDateString()</td>
                    <td>
                        <a asp-controller="Product" asp-action="Edit"
                           asp-route-id="@item.ProductID" class="btn btn-success">Edit</a>
                        <a asp-controller="Product" asp-action="Delete"
                           asp-route-id="@item.ProductID" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
    </tbody>
</table>
